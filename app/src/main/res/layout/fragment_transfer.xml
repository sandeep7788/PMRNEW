<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Transfer"
                android:textSize="19dp"
                android:fontFamily="@font/worksans_medium"
                android:layout_gravity="center"
                android:gravity="center"
                android:foregroundGravity="center"
                android:padding="4dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="4dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical"
                android:elevation="4dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Transfer To Member Id*" />

                <EditText
                    android:id="@+id/edtMemberid"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/background_shadow"
                    android:backgroundTint="#EBEDEF"
                    android:drawableLeft="@drawable/ic_baseline_account_circle"
                    android:drawablePadding="10.0dip"
                    android:paddingLeft="9dp"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="Member Id"
                    android:inputType="number"
                    android:textColor="#ff000000"
                    android:textColorHint="#566573"
                    android:textSize="15.0sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical"
                android:elevation="4dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount To be Transfer*" />


                <EditText
                    android:id="@+id/edtAmount"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/background_shadow"
                    android:backgroundTint="#EBEDEF"
                    android:drawableLeft="@drawable/ic_baseline_account_balance_wallet24"
                    android:drawablePadding="10.0dip"
                    android:paddingLeft="9dp"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="Amount"
                    android:inputType="number"
                    android:textColor="#ff000000"
                    android:textColorHint="#566573"
                    android:textSize="15.0sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical"
                android:elevation="4dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:text="Wallet Password*" />

                <EditText
                    android:id="@id/edtMobile"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/background_shadow"
                    android:backgroundTint="#EBEDEF"
                    android:drawableLeft="@drawable/ic_baseline_account_circle"
                    android:drawablePadding="10.0dip"
                    android:paddingLeft="9dp"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="Wallet Password"
                    android:inputType="textPassword"
                    android:textColor="#ff000000"
                    android:textColorHint="#566573"
                    android:textSize="15.0sp" />


            </LinearLayout>

            <Button
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:layout_marginRight="5.0dip"
                android:layout_marginBottom="45dp"
                android:layout_toLeftOf="@id/btn_back"
                android:background="@drawable/background_shadow"
                android:backgroundTint="@color/colorPrimary"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
                android:drawableTint="@color/white_color"
                android:foregroundGravity="center"
                android:gravity="left|center"
                android:paddingLeft="19dp"
                android:paddingRight="19dp"
                android:text="Transfer "
                android:drawablePadding="4dp"
                android:textColor="@color/white_color"
                android:fontFamily="@font/worksans_medium" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>