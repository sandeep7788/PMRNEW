<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:background="@color/white_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Passbook"
                android:textSize="15dp"
                android:fontFamily="@font/worksans_medium"
                android:layout_gravity="center"
                android:gravity="center"
                android:foregroundGravity="center"
                android:padding="4dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical"
                android:elevation="4dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:textColor="@color/gpvch_black"
                    android:text="From Date :- " />

                <TextView
                    android:id="@+id/fromDate"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/background_shadow"
                    android:backgroundTint="#EBEDEF"
                    android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                    android:drawablePadding="10.0dip"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:paddingLeft="9dp"
                    android:text=""
                    android:drawableTint="@color/colorPrimary"
                    android:hint="--/--/----"
                    android:inputType="number"
                    android:textColor="#ff000000"
                    android:textColorHint="#566573"
                    android:textSize="15.0sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical"
                android:elevation="4dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="To Date :- "
                    android:textColor="@color/gpvch_black"/>


                <TextView
                    android:id="@+id/toDate"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/background_shadow"
                    android:backgroundTint="#EBEDEF"
                    android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                    android:drawablePadding="10.0dip"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:paddingLeft="9dp"
                    android:text=""
                    android:drawableTint="@color/colorPrimary"
                    android:hint="--/--/----"
                    android:inputType="number"
                    android:textColor="#ff000000"
                    android:textColorHint="#566573"
                    android:textSize="15.0sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical"
                android:elevation="4dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gpvch_black"
                    android:text="Select Type" />

                <Spinner
                    android:id="@+id/spinnerType"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/background_shadow"
                    android:backgroundTint="#EBEDEF"
                    android:drawableLeft="@drawable/ic_baseline_account_circle"
                    android:drawablePadding="10.0dip"
                    android:paddingLeft="9dp"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="Wallet Password"
                    android:inputType="textPassword"
                    android:textColor="#ff000000"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:textColorHint="#566573"
                    android:textSize="15.0sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5.0dip"
                android:layout_marginBottom="15dp"
                android:layout_toLeftOf="@id/btn_back"
                android:background="@drawable/background_shadow"
                android:backgroundTint="@color/colorPrimary"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
                android:drawableTint="@color/white_color"
                android:foregroundGravity="center"
                android:gravity="left|center"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:text="Search "
                android:drawablePadding="4dp"
                android:textColor="@color/white_color"
                android:fontFamily="@font/worksans_medium" />


        </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </LinearLayout>
</layout>